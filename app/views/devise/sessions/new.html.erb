<script>
function myFunction(x) {
  x.style.background = "yellow";
}
</script>

<div class="log1">
<h2 onmouseover="style.color='red'"
onmouseout="style.color='black'">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: 'Enter Username or email', class: "log2" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",
    placeholder: 'password', class: "log2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button" %>
  </div>
<% end %>
<%#= render "devise/shared/links"%>
</div>

