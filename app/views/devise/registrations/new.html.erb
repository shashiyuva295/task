<div class="signup">
  <h3 class="h1">Sign up</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%#= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter Username or email', class: "email" %>
    </div>

    <div class="field">
    <%#= f.label :password %>
    
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password', class: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password', class: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button" %>
    </div>
  <% end %>

<%#= render "devise/shared/links" %>
</div>